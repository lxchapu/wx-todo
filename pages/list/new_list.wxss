.container {
  height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}
.header {
  display: flex;
  justify-content: flex-end;
}
/* 图标展示区域 */
.preview {
  width: 100%;
  padding: 10px 0;
}
.preview .position {
  margin: 0 auto;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.preview .position .iconfont {
  font-size: 100rpx;
  color: #fff;
}
/* 输入列表名称 */
.input {
  padding-top: 10px;
  padding-bottom: 20px;
}
.input-name {
  height: 100rpx;
  border-radius: 16rpx;
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  background-color: #f4f4f5;
}
.input-name.focus {
  background-color: #e4e4e5;
}
.picker {
  flex-grow: 1;
  overflow-y: scroll;
}
.picker scroll-view {
  height: 100%;
}
/* 颜色选择区域 */
.color-picker {
  padding-top: 15px;
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  grid-column-gap: 5rpx;
  grid-row-gap: 5rpx;
}
/* 颜色标签 */
.color-label {
  position: relative;
  padding-top: calc(100% - 12rpx);
  border-radius: 50%;
  border: 6rpx solid #fff;
}
.color-label.selected {
  border-color: var(--border-color);
}
.color-label .position {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-radius: 50%;
  border: 6rpx solid #fff;
}
/* 图标选择区域 */
.icon-picker {
  padding-top: 15px;
  padding-bottom: 15px;
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  grid-column-gap: 5rpx;
  grid-row-gap: 5rpx;
}
/* 颜色标签 */
.icon-label {
  position: relative;
  padding-top: calc(100% - 12rpx);
  border-radius: 50%;
  border: 6rpx solid #fff;
}
.icon-label.selected {
  border-color: var(--border-color);
}
.icon-label .position {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f2f2f7;
  border: 6rpx solid #fff;
}
.icon-label .position .iconfont {
  font-size: 54rpx;
  color: #505050;
}